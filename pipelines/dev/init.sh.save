
snap install kubectl
microk8s enable dashboard dns

pushd $HOME
    mkdir .kube
    microk8s config >> .kube/config
    echo "Copy and paste configs to your \$HOME/.kube/config in order to use kubectl from host machine"
    cat .kube/config

    ssh-keygen -t rsa -f $HOME/.ssh/id_rsa -q -P ""
    cat .ssh/id_rsa.pub >> authorized_keys
    echo "Use the following key to access dev machine through ssh"
    cat  .ssh/id_rsa
popd
